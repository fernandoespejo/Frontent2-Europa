@font-face {
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot?1k4ywo');
	src:url('../fonts/icomoon.eot?#iefix1k4ywo') format('embedded-opentype'),
		url('../fonts/icomoon.woff?1k4ywo') format('woff'),
		url('../fonts/icomoon.ttf?1k4ywo') format('truetype'),
		url('../fonts/icomoon.svg?1k4ywo#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

naranja = #DD4F20
azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A

a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white,50%)
	text-align center
	width 100%
	padding 1em 0
	
	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
		
		.mejor
			&:before
			&:after
				content "-"

header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 60px 0 70px
		
		.filtro
			color azul
			text-decoration none
			font-size 14px
			font-weight bold
			font-style italic

		.publicar
			margin 0 1em 0 0
			background naranja
			color white
			padding 0.2em 0.5em
			text-decoration none
			font-style italic
			text-shadow 1px 1px 0px black
			float right
			
			&:before
				display inline-block
				margin 0 3px 0 0
				font-family "iconos"
				content "\e600"

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
			
.usuario
	position absolute
	top 10px
	right 10px
	
	.avatar
		margin 0 1.1em 0 0
		position relative
		z-index 2

		img
			width 50px
			border-radius 50%
	
	.flechita
		background naranja
		color white
		display block
		padding 2px
		position absolute
		top 15px
		right 0
		text-align right
		width 50%
		text-decoration none
		text-shadow 1px 1px 0 black
		
		&:after
			font-family iconos
			content "\e602"
nav
	background azul
	border-left 15px solid #E8E8E8
	position relative

	&:before
		border-top 20px solid transparent
		border-bottom 20px solid transparent
		border-left 7px solid #E8E8E8
		content ""
		position absolute
		top 0
		left 0
	
	.menu
		height 40px
		line-height 40px
		padding 0
		margin 0 0 0 0.5em
		overflow-x auto
		white-space nowrap
		
		li
			display inline-block
			
			a
				color rgba(255,255,255,0.7)
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				
				
				&:hover
					color white
					text-shadow 1px 1px 0 rgba(0,0,0,0.2)
					transition all 300ms ease-out 0
.posts
	padding 0.5em
		
	.post
		margin-bottom 1em
		background white
		color gris_texto
		box-shadow 2px 2px 10px rgba(black, 0.5)
		border-radius 0 0 0.5em 0.5em
		
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			
			.datos
				float right
				
				.comentarios
					background gris_oscuro
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
					border-radius 3px
					position relative
				
					&:after
						border-top 7px solid transparent
						border-bottom 7px solid transparent
						border-right 7px solid gris_oscuro
						content ""
						position absolute
						top 13px
						right 5px
						
					&:hover
						background #CCC
						
						&:after							
							border-right 7px solid #CCC
							content ""

				.estrellita
					text-decoration none
					color #FFAA00

					&:after
						font-family "iconos"
						content "\e601"	
						
					&:hover
						color #DD9900

			.votos
				float left
				
				.down
				.up
					text-decoration none
					
				.down
					color red
					&:before
						font-family "iconos"
						content "\e602"
						font-size 1.5em
						vertical-align bottom
						
				
				.up
					color green
					&:before
						font-family "iconos"
						content "\e603"
						font-size 1.5em
						vertical-align bottom
		.descripcion
			color gris_texto
			
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					margin 0.5em 0 2em 0
					
				.fecha
					float right
					margin 0 1em 0 0
 
				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
					

				.titulo
					font-size 18px
					font-style italic
					color gris_oscuro
					margin 0
					padding 0.5em 0.5em 0 0
			
			.imagen
				margin 0
				float left

				img
					vertical-align top
					height 160px
					width 120px
					
@media screen and (min-width: 768px)
	
	header
		.titular
			.publicar
				position relative
				padding-left 3em
				
				&:before
					position absolute
					left 0
					top -10px
					font-size 2.5em

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 3.3%			