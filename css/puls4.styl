naranja = #DD4F20
azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A

a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 60px 0 70px
		
		.filtro
			color azul
			text-decoration none
			font-size 14px
			font-weight bold
			font-style italic

		.publicar
			margin 0 1em 0 0
			background naranja
			color white
			padding 0.2em 0.5em
			text-decoration none
			font-style italic
			text-shadow 1px 1px 0px black
			float right

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
			
.usuario
	position absolute
	top 10px
	right 10px
	
	.avatar
		margin 0 1em 0 0
		position relative
		z-index 2

		img
			width 50px
			border-radius 50%
	
	.flechita
		background naranja
		color white
		display block
		padding 3px
		position absolute
		top 15px
		right 0
		text-align right
		width 50%
nav
	background azul
	border-left 15px solid #E8E8E8
	position relative

	&:before
		border-top 20px solid transparent
		border-bottom 20px solid transparent
		border-left 7px solid #E8E8E8
		content ""
		position absolute
		top 0
		left 0
	
	.menu
		height 40px
		line-height 40px
		padding 0
		margin 0 0 0 0.5em
		overflow-x auto
		white-space nowrap
		
		li
			display inline-block
			
			a
				color rgba(255,255,255,0.7)
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				
				
				&:hover
					color white
					text-shadow 1px 1px 0 rgba(0,0,0,0.2)
					transition all 300ms ease-out 0
.posts
	padding 0.5em
		
	.post
		background white
		color gris_texto
		box-shadow 2px 2px 10px rgba(black, 0.5)
		border-radius 0 0 0.5em 0.5em
		
		.acciones
			border-top 3px solid azul
			padding 0.5em

		.descripcion
			color gris_texto
			
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					margin 0.5em 0 2em 0
					
				.fecha
					float right
					margin 0 1em 0 0

				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
					

				.titulo
					font-size 18px
					font-style italic
					color gris_oscuro
					margin 0
					padding 0.5em 0.5em 0 0
			
			.imagen
				margin 0
				float left

				img
					vertical-align top
					height 160px
					width 120px