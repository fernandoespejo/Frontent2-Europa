naranja = #DD4F20
azul = #22BCE0
gris_oscuro = #444

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 60px 0 70px
		
		.filtro
			color azul
			text-decoration none
			font-size 14px
			font-weight bold
			font-style italic

		.publicar
			margin 0 1em 0 0
			background naranja
			color white
			padding 0.2em 0.5em
			text-decoration none
			font-style italic
			text-shadow 1px 1px 0px black
			float right

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
			
.usuario
	position absolute
	top 10px
	right 10px
	
	.avatar
		margin 0 1em 0 0
		position relative
		z-index 2

		img
			width 50px
			border-radius 50%
	
	.flechita
		background naranja
		color white
		display block
		padding 3px
		position absolute
		top 15px
		right 0
		text-align right
		width 50%
nav
	background azul
	
	.menu
		height 40px
		line-height 40px
		padding 0
		margin 0
		overflow-x auto
		white-space nowrap
		
		li
			display inline-block
			
			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				